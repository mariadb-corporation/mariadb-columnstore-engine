cmake_minimum_required(VERSION 3.0)

include(ExternalProject)

set(TBB_DIR  ${CMAKE_CURRENT_LIST_DIR}/../tbb)

ExternalProject_Add(tbb_download
  GIT_REPOSITORY https://github.com/01org/tbb.git
  GIT_TAG tbb_2019
  GIT_SHALLOW TRUE
  SOURCE_DIR ${TBB_DIR}
  BUILD_IN_SOURCE TRUE
  CMAKE_ARGS -DCMAKE_BUILD_TYPE=@CMAKE_BUILD_TYPE@
  UPDATE_COMMAND ""
  PATCH_COMMAND ""
  INSTALL_COMMAND ""
  CONFIGURE_COMMAND ""
  BUILD_COMMAND ""
)

